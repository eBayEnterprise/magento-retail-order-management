<?xml version="1.0" encoding="utf-8"?>
<layout version="0.1.0">
	<address_validation_suggestions_assets>
		<reference name="head">
			<action method="addCss">
				<stylesheet>css/validation-suggestions.css</stylesheet>
			</action>
			<action method="addItem">
				<type>skin_js</type>
				<name>js/validation-suggestions.js</name>
			</action>
		</reference>
	</address_validation_suggestions_assets>
	<customer_address_form>
		<update handle="address_validation_suggestions_assets"/>
		<reference name="customer_address_edit">
			<action method="setTemplate">
				<template>eb2caddress_frontend/customer/address/edit.phtml</template>
			</action>
			<block type="eb2caddress/suggestions" name="address_validation_suggestions">
				<action method="setAddressFormat">
					<formatConfig>address_format_address_only</formatConfig>
				</action>
			</block>
		</reference>
	</customer_address_form>
	<enterprise_giftregistry_index_edit>
		<update handle="address_validation_suggestions_assets"/>
		<reference name="giftregistry_address_edit">
			<action method="setTemplate">
				<template>eb2caddress_frontend/giftregistry/address/edit.phtml</template>
			</action>
			<block type="eb2caddress/suggestions" name="address_validation_suggestions">
				<action method="setAddressFormat">
					<formatConfig>address_format_full</formatConfig>
				</action>
			</block>
		</reference>
	</enterprise_giftregistry_index_edit>
	<checkout_multishipping_customer_address>
		<update handle="address_validation_suggestions_assets"/>
		<reference name="customer_address_edit">
			<action method="setTemplate">
				<template>eb2caddress_frontend/customer/address/edit.phtml</template>
			</action>
			<block type="eb2caddress/suggestions" name="address_validation_suggestions">
				<action method="setAddressFormat">
					<formatConfig>address_format_address_only</formatConfig>
				</action>
			</block>
		</reference>
	</checkout_multishipping_customer_address>
	<checkout_onepage_index>
		<update handle="address_validation_suggestions_assets"/>
		<reference name="head">
			<action method="addItem">
				<type>skin_js</type>
				<name>js/checkout-validation-suggestions.js</name>
			</action>
		</reference>
		<reference name="checkout.onepage.billing">
			<action method="setTemplate">
				<template>eb2caddress_frontend/checkout/onepage/billing.phtml</template>
			</action>
			<block type="eb2caddress/suggestions" name="address_validation_suggestions">
				<action method="setAddressFormat">
					<formatConfig>address_format_full</formatConfig>
				</action>
			</block>
		</reference>
		<reference name="checkout.onepage.shipping">
			<action method="setTemplate">
				<template>eb2caddress_frontend/checkout/onepage/shipping.phtml</template>
			</action>
			<block type="eb2caddress/suggestions" name="address_validation_suggestions">
				<action method="setAddressFormat">
					<formatConfig>address_format_full</formatConfig>
				</action>
			</block>
		</reference>
	</checkout_onepage_index>
	<checkout_onepage_address_suggestions>
		<remove name="right"/>
		<remove anem="left"/>
		<block type="eb2caddress/suggestions" name="root" output="toHtml">
			<action method="setAddressFormat">
				<formatConfig>address_format_full</formatConfig>
			</action>
		</block>
	</checkout_onepage_address_suggestions>
</layout>
