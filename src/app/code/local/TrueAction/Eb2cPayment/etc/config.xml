<?xml version="1.0" encoding="utf-8"?>
<config>
	<modules>
		<TrueAction_Eb2cPayment>
			<version>0.9.0</version>
		</TrueAction_Eb2cPayment>
	</modules>
	<global>
		<models>
			<eb2cpayment>
				<class>TrueAction_Eb2cPayment_Model</class>
				<resourceModel>eb2cpayment_mysql4</resourceModel>
			</eb2cpayment>
			<eb2cpayment_mysql4>
				<class>TrueAction_Eb2cPayment_Model_Mysql4</class>
				<entities>
					<paypal>
						<table>eb2c_payments_paypal</table>
					</paypal>
				</entities>
			</eb2cpayment_mysql4>
			<eb2cpaymentoverrides>
				<class>TrueAction_Eb2cPayment_Overrides_Model</class>
			</eb2cpaymentoverrides>
			<enterprise_giftcardaccount>
				<rewrite>
					<giftcardaccount>TrueAction_Eb2cPayment_Overrides_Model_Giftcardaccount</giftcardaccount>
				</rewrite>
			</enterprise_giftcardaccount>
			<paypal>
				<rewrite>
					<api_nvp>TrueAction_Eb2cPayment_Overrides_Model_Api_Nvp</api_nvp>
				</rewrite>
			</paypal>
		</models>
		<helpers>
			<eb2cpayment>
				<class>TrueAction_Eb2cPayment_Helper</class>
			</eb2cpayment>
			<enterprise_giftcardaccount>
				<rewrite>
					<data>TrueAction_Eb2cPayment_Overrides_Helper_Data</data>
				</rewrite>
			</enterprise_giftcardaccount>
		</helpers>
		<blocks>
			<eb2cpayment>
				<class>TrueAction_Eb2cPayment_Block</class>
			</eb2cpayment>
			<enterprise_giftcardaccount>
				<rewrite>
					<checkout_cart_giftcardaccount>TrueAction_Eb2cPayment_Overrides_Block_Checkout_Cart_Giftcardaccount</checkout_cart_giftcardaccount>
				</rewrite>
			</enterprise_giftcardaccount>
			<customer>
				<rewrite>
					<account_navigation>TrueAction_Eb2cPayment_Overrides_Block_Account_Navigation</account_navigation>
				</rewrite>
			</customer>
			<paypal>
				<rewrite>
					<express_shortcut>TrueAction_Eb2cPayment_Overrides_Block_Paypal_Express_Shortcut</express_shortcut>
				</rewrite>
			</paypal>
			<adminhtml>
				<rewrite>
					<system_config_form>TrueAction_Eb2cPayment_Overrides_Block_Adminhtml_System_Config_Form</system_config_form>
					<system_config_tabs>TrueAction_Eb2cPayment_Overrides_Block_Adminhtml_System_Config_Tabs</system_config_tabs>
				</rewrite>
			</adminhtml>
		</blocks>
		<resources>
			<eb2cpayment_setup>
				<setup>
					<module>TrueAction_Eb2cPayment</module>
				</setup>
				<connection>
					<use>core_setup</use>
				</connection>
			</eb2cpayment_setup>
		</resources>
		<events>
			<admin_system_config_changed_section_eb2ccore>
				<observers>
					<payment_suppression_observer>
						<type>singleton</type>
						<class>TrueAction_Eb2cPayment_Model_Observer</class>
						<method>suppressPaymentModule</method>
					</payment_suppression_observer>
				</observers>
			</admin_system_config_changed_section_eb2ccore>
		</events>
	</global>
	<frontend>
		<translate>
			<modules>
				<TrueAction_Eb2cPayment>
					<files>
						<default>TrueAction_Eb2cPayment.csv</default>
					</files>
				</TrueAction_Eb2cPayment>
			</modules>
		</translate>
		<routers>
			<enterprise_giftcardaccount>
				<args>
					<modules>
						<TrueAction_Eb2cPayment before="Enterprise_GiftCardAccount">TrueAction_Eb2cPayment_Overrides_GiftCardAccount</TrueAction_Eb2cPayment>
					</modules>
				</args>
			</enterprise_giftcardaccount>
			<eb2cpayment>
				<use>standard</use>
				<args>
					<module>TrueAction_Eb2cPayment</module>
					<frontName>eb2cpayment</frontName>
				</args>
			</eb2cpayment>
		</routers>
		<layout>
			<updates>
				<trueaction_eb2cpayment module="TrueAction_Eb2cPayment">
					<file>eb2cpayment.xml</file>
				</trueaction_eb2cpayment>
			</updates>
		</layout>
		<events>
			<eb2c_event_dispatch_after_inventory_allocation>
				<observers>
					<TrueAction_Eb2cPayment_observer>
						<type>singleton</type>
						<class>TrueAction_Eb2cPayment_Model_Observer</class>
						<method>redeemGiftCard</method>
					</TrueAction_Eb2cPayment_observer>
				</observers>
			</eb2c_event_dispatch_after_inventory_allocation>
			<eb2corder_order_creation_failure>
				<observers>
					<TrueAction_Eb2cPayment_observer>
						<type>singleton</type>
						<class>TrueAction_Eb2cPayment_Model_Observer</class>
						<method>redeemVoidGiftCard</method>
					</TrueAction_Eb2cPayment_observer>
				</observers>
			</eb2corder_order_creation_failure>
		</events>
	</frontend>
	<adminhtml>
		<translate>
			<modules>
				<TrueAction_Eb2cPayment>
					<files>
						<default>TrueAction_Eb2cPayment.csv</default>
					</files>
				</TrueAction_Eb2cPayment>
			</modules>
		</translate>
		<layout>
			<updates>
				<eb2cpayment>
					<file>eb2cpayment.xml</file>
				</eb2cpayment>
			</updates>
		</layout>
	</adminhtml>
	<default>
		<eb2cpayment>
			<api_payment_xml_ns>http://api.gsicommerce.com/schema/payment/1.0</api_payment_xml_ns>
			<api_service>payments</api_service>
			<api_opt_stored_value_balance>storedvalue/balance/GS</api_opt_stored_value_balance>
			<api_opt_stored_value_redeem>storedvalue/redeem/GS</api_opt_stored_value_redeem>
			<api_opt_stored_value_redeem_void>storedvalue/redeemvoid/GS</api_opt_stored_value_redeem_void>
			<api_opt_paypal_set_express_checkout>paypal/setExpress</api_opt_paypal_set_express_checkout>
			<api_opt_paypal_get_express_checkout>paypal/getExpress</api_opt_paypal_get_express_checkout>
			<api_opt_paypal_do_express_checkout>paypal/doExpress</api_opt_paypal_do_express_checkout>
			<api_opt_paypal_do_authorization>paypal/doAuth</api_opt_paypal_do_authorization>
			<api_opt_paypal_do_void>paypal/void</api_opt_paypal_do_void>
			<api_return_format>xml</api_return_format>
			<xsd>
				<paypal_express_do_file>Payment-Service-PayPalDoExpress-1.0.xsd</paypal_express_do_file>
				<paypal_express_get_file>Payment-Service-PayPalGetExpress-1.0.xsd</paypal_express_get_file>
				<paypal_express_set_file>Payment-Service-PayPalSetExpress-1.0.xsd</paypal_express_set_file>
				<paypal_do_auth_file>Payment-Service-PayPalDoAuth-1.0.xsd</paypal_do_auth_file>
				<paypal_void_auth_file>Payment-Service-PayPalVoidAuth-1.0.xsd</paypal_void_auth_file>
				<stored_value_balance_file>Payment-Service-StoredValueBalance-1.0.xsd</stored_value_balance_file>
				<stored_value_redeem_void_file>Payment-Service-StoredValueRedeemVoid-1.0.xsd</stored_value_redeem_void_file>
				<stored_value_redeem_file>Payment-Service-StoredValueRedeem-1.0.xsd</stored_value_redeem_file>
			</xsd>
		</eb2cpayment>
		<eb2ccore>
			<eb2cpayment>
				<enabled>0</enabled>
			</eb2cpayment>
		</eb2ccore>
	</default>
	<phpunit>
		<suite>
			<modules>
				<TrueAction_Eb2cPayment/>
			</modules>
		</suite>
	</phpunit>
</config>
