<?xml version="1.0" encoding="utf-8"?>
<config>
	<modules>
		<TrueAction_Eb2cFraud>
			<version>0.9.0</version>
		</TrueAction_Eb2cFraud>
	</modules>
	<global>
		<models>
			<eb2cfraud>
				<class>TrueAction_Eb2cFraud_Model</class>
			</eb2cfraud>
		</models>
		<fieldsets>
			<sales_convert_quote>
				<eb2c_fraud_javascript_data>
					<to_order>*</to_order>
				</eb2c_fraud_javascript_data>
				<eb2c_fraud_host_name>
					<to_order>*</to_order>
				</eb2c_fraud_host_name>
				<eb2c_fraud_ip_address>
					<to_order>*</to_order>
				</eb2c_fraud_ip_address>
				<eb2c_fraud_session_id>
					<to_order>*</to_order>
				</eb2c_fraud_session_id>
				<eb2c_fraud_user_agent>
					<to_order>*</to_order>
				</eb2c_fraud_user_agent>
				<eb2c_fraud_referrer>
					<to_order>*</to_order>
				</eb2c_fraud_referrer>
				<eb2c_fraud_content_types>
					<to_order>*</to_order>
				</eb2c_fraud_content_types>
				<eb2c_fraud_encoding>
					<to_order>*</to_order>
				</eb2c_fraud_encoding>
				<eb2c_fraud_language>
					<to_order>*</to_order>
				</eb2c_fraud_language>
				<eb2c_fraud_char_set>
					<to_order>*</to_order>
				</eb2c_fraud_char_set>
			</sales_convert_quote>
		</fieldsets>
		<resources>
			<eb2cfraud_setup>
				<setup>
					<module>TrueAction_Eb2cFraud</module>
					<class>Mage_Sales_Model_Resource_Setup</class>
				</setup>
			</eb2cfraud_setup>
		</resources>
		<helpers>
			<eb2cfraud>
				<class>TrueAction_Eb2cFraud_Helper</class>
			</eb2cfraud>
		</helpers>
		<blocks>
			<eb2cfraud>
				<class>TrueAction_Eb2cFraud_Block</class>
			</eb2cfraud>
		</blocks>
	</global>
	<frontend>
		<events>
			<eb2c_onepage_save_order_before>
				<observers>
					<capture_order_context>
						<type>model</type>
						<class>eb2cfraud/observer</class>
						<method>captureOrderContext</method>
					</capture_order_context>
				</observers>
			</eb2c_onepage_save_order_before>
		</events>
		<layout>
			<updates>
				<eb2cfraud>
					<file>eb2cfraud.xml</file>
				</eb2cfraud>
			</updates>
		</layout>
	</frontend>
	<test>
		<events>
			<eb2c_onepage_save_order_before>
				<observers>
					<capture_order_context>
						<type>model</type>
						<class>eb2cfraud/observer</class>
						<method>captureOrderContext</method>
					</capture_order_context>
				</observers>
			</eb2c_onepage_save_order_before>
		</events>
	</test>
	<phpunit>
		<suite>
			<modules>
				<TrueAction_Eb2cFraud/>
			</modules>
		</suite>
	</phpunit>
</config>
