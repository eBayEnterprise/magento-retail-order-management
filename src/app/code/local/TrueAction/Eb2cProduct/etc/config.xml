<config>
	<modules>
		<TrueAction_Eb2cProduct>
			<version>1.0.0</version>
		</TrueAction_Eb2cProduct>
	</modules>
	<global>
		<models>
			<eb2cproduct>
				<class>TrueAction_Eb2cProduct_Model</class>
			</eb2cproduct>
		</models>
		<helpers>
			<eb2cproduct>
				<class>TrueAction_Eb2cProduct_Helper</class>
			</eb2cproduct>
		</helpers>
	</global>
	<crontab>
		<jobs>
			<eb2cproduct_feed_item_master>
				<schedule><cron_expr>0 3 * * *</cron_expr></schedule>
				<run>
					<model>eb2cproduct/feed_item_master::processFeeds</model>
				</run>
			</eb2cproduct_feed_item_master>
		</jobs>
	</crontab>
	<default>
		<eb2c>
			<product>
				<developer_mode>1</developer_mode>
				<feed_local_path>var/TrueAction/Eb2c/Feed/Item/Master/</feed_local_path>
				<feed_remote_received_path>/Item/Master/</feed_remote_received_path>
				<config_path>eb2ccore/general</config_path>
				<feed_event_type>ItemMaster</feed_event_type>
				<feed_header_version>2.3.0</feed_header_version>
			</product>
		</eb2c>
	</default>
	<phpunit>
		<suite>
			<modules>
				<TrueAction_Eb2cProduct />
			</modules>
		</suite>
	</phpunit>
</config>
