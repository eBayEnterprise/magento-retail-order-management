<config>
	<modules>
		<TrueAction_Eb2cProduct>
			<version>1.0.0</version>
		</TrueAction_Eb2cProduct>
	</modules>
	<global>
		<models>
			<eb2cproduct>
				<class>TrueAction_Eb2cProduct_Model</class>
			</eb2cproduct>
		</models>
		<helpers>
			<eb2cproduct>
				<class>TrueAction_Eb2cProduct_Helper</class>
			</eb2cproduct>
		</helpers>
		<blocks>
			<adminhtml>
				<rewrite>
					<catalog_product_attribute_set_main>TrueAction_Eb2cProduct_Overrides_Block_Catalog_Product_Attribute_Set_Main</catalog_product_attribute_set_main>
				</rewrite>
			</adminhtml>
		</blocks>
		<eb2cproduct_attributes>
			<default>
				<tax_code>
					<scope>Website</scope>
					<label>Tax Code</label>
					<group>Price</group>
					<input_type>text</input_type>
					<unique>N</unique>
					<product_types><![CDATA[simple,configurable,virtual,bundle,downloadable,giftcard]]></product_types>
					<default></default>
				</tax_code>
				<is_drop_shipped>
					<scope>Website</scope>
					<label>Is Drop Shipped</label>
					<group></group>
					<input_type>boolean</input_type>
					<unique>N</unique>
					<product_types><![CDATA[simple,configurable,bundle]]></product_types>
					<default>N</default>
				</is_drop_shipped>
				<drop_ship_supplier_name>
					<scope>Website</scope>
					<label>Drop Ship Supplier Name</label>
					<group></group>
					<input_type>text</input_type>
					<unique>N</unique>
					<product_types><![CDATA[simple,configurable,bundle]]></product_types>
					<default></default>
				</drop_ship_supplier_name>
				<drop_ship_supplier_number>
					<scope>Website</scope>
					<label>Drop Ship Supplier Number</label>
					<group></group>
					<input_type>text</input_type>
					<unique>N</unique>
					<product_types><![CDATA[simple,configurable,bundle]]></product_types>
					<default></default>
				</drop_ship_supplier_number>
				<drop_ship_supplier_part>
					<scope>Website</scope>
					<label>Drop Ship Supplier Part Number</label>
					<group></group>
					<input_type>text</input_type>
					<unique>N</unique>
					<product_types><![CDATA[simple,configurable,bundle]]></product_types>
					<default></default>
				</drop_ship_supplier_part>
				<price_is_vat_inclusive>
					<scope>Store</scope>
					<label>Price is VAT Inclusive</label>
					<group>Prices</group>
					<input_type>boolean</input_type>
					<unique>N</unique>
					<product_types></product_types>
					<default>N</default>
				</price_is_vat_inclusive>
			</default>
		</eb2cproduct_attributes>
	</global>
	<crontab>
		<jobs>
			<eb2cproduct_feed_item_master>
				<schedule><cron_expr>0 3 * * *</cron_expr></schedule>
				<run>
					<model>eb2cproduct/feed_item_master::processFeeds</model>
				</run>
			</eb2cproduct_feed_item_master>
		</jobs>
	</crontab>
	<default>
		<eb2c>
			<product>
				<developer_mode>1</developer_mode>
				<feed_local_path>var/TrueAction/Eb2c/Feed/Item/Master/</feed_local_path>
				<feed_remote_received_path>/Item/Master/</feed_remote_received_path>
				<config_path>eb2ccore/general</config_path>
				<feed_event_type>ItemMaster</feed_event_type>
				<feed_header_version>2.3.0</feed_header_version>
			</product>
		</eb2c>
	</default>
	<phpunit>
		<suite>
			<modules>
				<TrueAction_Eb2cProduct />
			</modules>
		</suite>
	</phpunit>
</config>
