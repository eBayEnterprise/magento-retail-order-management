<?xml version="1.0" encoding="utf-8"?>
<config>
	<modules>
		<TrueAction_Eb2cTax>
			<version>0.9.1</version>
		</TrueAction_Eb2cTax>
	</modules>
	<global>
		<models>
			<eb2ctax>
				<class>TrueAction_Eb2cTax_Model</class>
				<resourceModel>eb2ctax_resource</resourceModel>
			</eb2ctax>
			<eb2ctax_resource>
				<class>TrueAction_Eb2cTax_Model_Resource</class>
				<entities>
					<response_quote>
						<table>eb2ctax_response_quote</table>
					</response_quote>
				</entities>
			</eb2ctax_resource>
			<tax>
				<rewrite>
					<calculation>TrueAction_Eb2cTax_Overrides_Model_Calculation</calculation>
					<observer>TrueAction_Eb2cTax_Overrides_Model_Observer</observer>
					<sales_total_quote_subtotal>TrueAction_Eb2cTax_Overrides_Model_Sales_Total_Quote_Subtotal</sales_total_quote_subtotal>
					<sales_total_quote_tax>TrueAction_Eb2cTax_Overrides_Model_Sales_Total_Quote_Tax</sales_total_quote_tax>
					<sales_total_quote_shipping>TrueAction_Eb2cTax_Overrides_Model_Sales_Total_Quote_Shipping</sales_total_quote_shipping>
				</rewrite>
			</tax>
			<enterprise_giftwrapping>
				<rewrite>
					<total_quote_tax_giftwrapping>TrueAction_Eb2cTax_Overrides_Model_Total_Quote_Tax_Giftwrapping</total_quote_tax_giftwrapping>
				</rewrite>
			</enterprise_giftwrapping>
		</models>
		<helpers>
			<eb2ctax>
				<class>TrueAction_Eb2cTax_Helper</class>
			</eb2ctax>
		</helpers>
		<resources>
			<eb2ctax_setup>
				<setup>
					<module>TrueAction_Eb2cTax</module>
				</setup>
			</eb2ctax_setup>
		</resources>
		<events>
			<eb2ctax_subtotal_collect_before>
				<observers>
					<tax>
						<class>tax/observer</class>
						<method>taxEventSubtotalCollectBefore</method>
					</tax>
				</observers>
			</eb2ctax_subtotal_collect_before>
			<!-- Disable observers used by the tax module that no longer apply -->
			<catalog_prepare_price_select>
				<observers>
					<tax>
						<type>disabled</type>
					</tax>
				</observers>
			</catalog_prepare_price_select>
			<catalog_product_collection_load_after>
				<observers>
					<tax>
						<type>disabled</type>
					</tax>
				</observers>
			</catalog_product_collection_load_after>
			<sales_quote_collect_totals_after>
				<observers>
					<eb2ctax_reset_tax_flags>
						<class>tax/observer</class>
						<method>cleanupTaxRequestFlags</method>
					</eb2ctax_reset_tax_flags>
				</observers>
			</sales_quote_collect_totals_after>
		</events>
		<sales>
			<quote>
				<totals>
					<tax_subtotal>
 						<class>tax/sales_total_quote_subtotal</class>
						<after>discount</after>
						<before>tax_shipping</before>
 					</tax_subtotal>
					<tax_shipping>
						<class>tax/sales_total_quote_shipping</class>
						<after>tax_subtotal</after>
						<before>tax</before>
					</tax_shipping>
					<tax>
						<after>tax_shipping</after>
						<before>grand_total</before>
					</tax>
				</totals>
			</quote>
		</sales>
	</global>
	<default>
		<eb2ccore>
			<eb2ctax_calculation>
				<apply_after_discount>1</apply_after_discount>
				<vat_inclusive_pricing>0</vat_inclusive_pricing>
			</eb2ctax_calculation>
			<eb2ctax_admin_origin>
				<line1/>
				<line2/>
				<line3/>
				<line4/>
				<city/>
				<main_division/>
				<country_code>US</country_code>
				<postal_code/>
			</eb2ctax_admin_origin>
			<eb2ctax_defaults>
				<duty_amount_code>eb2c-duty-amount</duty_amount_code>
			</eb2ctax_defaults>
			<eb2ctax_xsd>
				<quote_request_file>TaxDutyFee-QuoteRequest-1.0.xsd</quote_request_file>
			</eb2ctax_xsd>
		</eb2ccore>
	</default>
	<phpunit>
		<suite>
			<modules>
				<TrueAction_Eb2cTax/>
			</modules>
		</suite>
	</phpunit>
</config>
